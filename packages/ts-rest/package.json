{
  "private": true,
  "name": "@calmpulse-app/ts-rest",
  "version": "1.0.0",
  "description": "ts-rest contracts",
  "license": "MIT",
  "main": "index.ts",
  "scripts": {
    "build": "tsc -p .",
    "dev": "tsx watch index.ts",
    "format": "prettier --config ../config/.prettierrc --write --ignore-path .gitignore . && prettier-package-json --write ./package.json",
    "lint": "eslint . --ext .ts,.tsx --config ../config/.eslintrc.base.js",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --config ../config/.eslintrc.base.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@calmpulse-app/config": "workspace:*",
    "@calmpulse-app/types": "workspace:*",
    "@calmpulse-app/utils": "workspace:*",
    "@ts-rest/core": "^3.52.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prettier-package-json": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}

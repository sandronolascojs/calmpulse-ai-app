{
  "name": "@calmpulse-app/api",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p bundle type:gen",
    "bundle": "tsup-node",
    "bundle:watch": "tsup-node --watch",
    "clean": "del dist tsconfig.tsbuildinfo",
    "dev": "run-p bundle:watch type:gen:watch dev:local",
    "dev:local": "dotenv -e .env.local -- node ./dist/index.js",
    "format": "prettier --write --ignore-path .prettierignore --config ../../packages/config/.prettierrc . && prettier-package-json --write ./package.json",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --max-warnings 0 --fix",
    "start": "node ./dist/index.js",
    "type:check": "tsc --noEmit",
    "type:gen": "tsc --emitDeclarationOnly",
    "type:gen:watch": "tsc --emitDeclarationOnly --watch"
  },
  "dependencies": {
    "@calmpulse-app/ai": "workspace:*",
    "@calmpulse-app/config": "workspace:*",
    "@calmpulse-app/db": "workspace:*",
    "@calmpulse-app/shared": "workspace:*",
    "@calmpulse-app/ts-rest": "workspace:*",
    "@calmpulse-app/types": "workspace:*",
    "@fastify/aws-lambda": "^5.1.4",
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@slack/oauth": "^3.0.3",
    "@slack/web-api": "^7.9.3",
    "@t3-oss/env-core": "catalog:",
    "@ts-rest/core": "catalog:",
    "@ts-rest/fastify": "^3.52.1",
    "better-auth": "catalog:",
    "dotenv-cli": "catalog:",
    "drizzle-orm": "catalog:",
    "fastify": "catalog:",
    "fastify-plugin": "^5.0.1",
    "limax": "catalog:",
    "npm-run-all": "^4.1.5",
    "pg": "catalog:",
    "resend": "^4.6.0",
    "winston": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@paralleldrive/cuid2": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
